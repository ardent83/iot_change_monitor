# ==================================================
# Environment Variables Template
# ==================================================
# Copy this file to .env and fill in your actual values.
# Do NOT commit the .env file to version control.

# --- Django Core Settings ---
# Generate a new secret key for your project.
# You can use an online generator or Django's `get_random_secret_key()` function.
SECRET_KEY="your-django-secret-key-here"

# Set to False in production for security.
DEBUG=True


# --- PostgreSQL Database Settings ---
DB_NAME=your_db_name
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=5432


# --- AI Language Model Service ---
LLM_API_KEY="your_llm_api_key_here"
LLM_API_URL="https://api.avalai.ir/v1/responses"


# --- Redis Cache & Channel Layer ---
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
